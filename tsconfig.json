{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "middleware.ts", "src/app/[lang]/dictionaries.js", "src/app/[lang]/article/[slug]/page.jsx", "src/app/[lang]/policy/page.jsx", "src/app/[lang]/page.jsx", "src/app/[lang]/news/page.jsx", "src/app/[lang]/contact_us/page.jsx", "src/app/[lang]/about_us/page.jsx", "src/app/page.jsx"],
  "exclude": ["node_modules"]
}
